@using Microsoft.AspNetCore.Mvc.Localization;
@model List<Order>
@inject IViewLocalizer ViewLocalizer

@if (Model is null || Model.Count < 1)
{
    <div>@ViewLocalizer["emptyorders"]</div>
}
else
{
    @if (Model.Count > 0)
    {
        <div class="order-header">
            <div>@ViewLocalizer["products"]</div>
            <div>@ViewLocalizer["price"]</div>
            <div>@ViewLocalizer["status"]</div>
            <div>@ViewLocalizer["edit_header"]?</div>
            <div>@ViewLocalizer["delete_header"]?</div>
        </div>

        <div class="orderRow">
            @foreach (var order in Model)
            {
                <div>
                    <form asp-action="OrderEdit" method="get">
                        <input type="hidden" name="id" value="@order.Id" />
                        <div>@(string.Join(", ", order.Products.Select(x => x.Description)))</div>
                        <div>@order.Price</div>
                        <div>@order.Status.Status</div>
                        <div><button asp-action="OrderEdit" type="submit">@ViewLocalizer["edit"]</button></div>
                        <div><button asp-action="OrderDelete" type="submit">@ViewLocalizer["delete"]</button></div>
                    </form>
                </div>
            }
        </div>
    }
}